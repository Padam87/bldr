{
    "name":              "bldr-io/bldr",
    "description":       "Yaml Build System",
    "require":           {
        "symfony/console":              "dev-master",
        "symfony/config":               "dev-master",
        "symfony/dependency-injection": "dev-master",
        "symfony/event-dispatcher":     "dev-master",
        "symfony/process":              "dev-master",
        "symfony/yaml":                 "dev-master",
        "herrera-io/phar-update":       "1.*",
        "bldr-io/bldr-execute":         "dev-master",
        "bldr-io/bldr-filesystem":      "dev-master"
    },
    "suggest":           {
        "bldr-io/bldr-symfony": "Allows for shorter syntax with symfony commands"
    },
    "require-dev":       {
        "phpunit/phpunit":           "4.0.*",
        "squizlabs/php_codesniffer": "~1.0"
    },
    "license":           "MIT",
    "authors":           [
        {
            "name":  "Aaron Scherer",
            "email": "aequasi@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload":          {
        "psr-4": {
            "Bldr\\": "src/"
        }
    },
    "autoload-dev":      {
        "psr-4": {
            "Bldr\\Test\\": "tests/"
        }
    },
    "config":            {
        "bin-dir": "bin"
    },
    "bin":               [
        "bin/bldr"
    ]
}
